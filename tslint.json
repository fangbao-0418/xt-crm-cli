{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended", "tslint-eslint-rules", "tslint-react"
  ],
  "jsRules": {},
  "rules": {
    "no-namespace": false,
    "no-reference": false,
    "array-type": false,
    "semicolon": [true, "never"],
    "quotemark": [true, "single"],
    "object-literal-sort-keys": false,
    "trailing-comma": [true, {"multiline": "never", "singleline": "never"}],
    "no-var-requires": false,
    "no-console": false,
    "interface-name": [true, "never-prefix"],
    "space-before-function-paren": true,
    "no-empty": false,
    "no-unused-expression": true,
    "space-within-parens": true,
    "align": true,
    "indent": [true, "spaces", 2],
    "ter-indent": [true, 2],
    "one-line": [true, "check-catch", "check-finally", "check-else", "check-whitespace"],
    "whitespace": [true, "check-branch", "check-decl", "check-operator", "check-module", "check-typecast", "check-rest-spread", "check-type-operator", "check-separator", "check-preblock"],
    "noImplicitAny": false,
    "react/jsx-indent": [
      "error",
      2
    ],
    "jsx-no-multiline-js": false,
    "jsx-self-close": false,
    "jsx-no-string-ref": false,
    "jsx-no-bind": false,
    "jsx-boolean-value": false,
    "jsx-no-lambda": false,
    "key-spacing": ["error", { "beforeColon": false,  "afterColon": true }],
    "ordered-imports": false,
    "max-line-length": false
  },
  "rulesDirectory": []
}
